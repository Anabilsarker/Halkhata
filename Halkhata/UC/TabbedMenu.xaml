<UserControl x:Name="tabbedmenu"
             x:Class="Halkhata.UC.TabbedMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Halkhata.UC"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <TabControl TabStripPlacement="Left" SelectionChanged="TabControl_SelectionChanged">
            <TabItem x:Name="transaction" Header="Transactaion" FontSize="20" FontWeight="SemiBold" Height="200" Width="160" Foreground="White" Background="#47ADFF"/>
            <TabItem x:Name="expenses" Header="Expenses" FontSize="20" FontWeight="SemiBold" Height="200" Width="160" Foreground="White" Background="#47ADFF"/>
            <TabItem x:Name="loan" Header="Loan" FontSize="20" FontWeight="SemiBold" Height="200" Width="160" Foreground="White" Background="#47ADFF"/>
        </TabControl>
    </Grid>
</UserControl>
